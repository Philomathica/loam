{
  "name": "loam",
  "version": "1.0.0",
  "description": "Javascript wrapper for GDAL in the browser",
  "main": "lib/loam.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --require babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --require babel-core/register --colors -w ./test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azavea/loam.git"
  },
  "keywords": [
    "gdal",
    "emscripten",
    "geospatial",
    "raster",
    "geotiff"
  ],
  "author": "Derek Dohler",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azavea/loam/issues"
  },
  "homepage": "https://github.com/azavea/loam",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-loader": "^1.9.0",
    "mocha": "^4.0.1",
    "webpack": "^3.10.0",
    "yargs": "^10.0.3"
  }
}
